<div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">
                <div class="pull-right tooltip-demo">
                    <a ng-click="inbox()" onclick="return false;" title="Reply" data-placement="top" data-toggle="tooltip" class="btn btn-white btn-sm" href="mail_compose.html"><i class="fa fa-reply"></i> Quay lại </a>
                    
                </div>
                <h2>
                    Đọc thư
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">


                    <h3>
                        <span class="font-noraml">[[email.subject]]
                    </h3>
                    <h5>
                        <span class="pull-right font-noraml">10:15AM 02 FEB 2014</span>
                        <span class="font-noraml">From: </span>[[email.from_address]]  
                    </h5>
                </div>
            </div>
                <div class="mail-box">


                <div class="mail-body" ng-bind-html="email.content">
                    
                </div>
                    <div class="mail-attachment" ng-if="email.emailsattachments.length > 0">
                        <p>
                            <span><i class="fa fa-paperclip"></i> [[email.emailsattachments.length]] tệp đính kèm - </span>
                            <a href="#">Tải về tất cả</a>
                            
                        </p>

                        <div class="attachment">
                            
                            <div class="file-box" ng-repeat="attachment in email.emailsattachments" style="width: 189px;">
                                <div class="file">
                                    <a href="#">
                                        <span class="corner"></span>

                                        <div class="image" style="height: 173px;">
                                            <img src="[[attachment.files.thumbnail]]" class="img-responsive" alt="image">
                                        </div>
                                        <div class="file-name">
                                            [[attachment.files.filename]]
                                            <br>
                                            <small>Added: Jan 6, 2014</small>
                                        </div>
                                    </a>

                                </div>
                            </div>
                            
                            <div class="clearfix"></div>
                        </div>
                        </div>
                        <div class="mail-body text-right tooltip-demo">
                                <a onclick="return false;" ng-click="replyEmail(email)" href="mail_compose.html" class="btn btn-sm btn-white"><i class="fa fa-reply"></i> Trả lời </a>
                                <a href="mail_compose.html" class="btn btn-sm btn-white"><i class="fa fa-arrow-right"></i> Chuyển tiếp </a>
                                <button class="btn btn-sm btn-white" data-original-title="Trash" data-toggle="tooltip" data-placement="top" title=""><i class="fa fa-trash-o"></i> Xóa</button>
                        </div>
                        <div class="clearfix"></div>


                </div>
            </div>