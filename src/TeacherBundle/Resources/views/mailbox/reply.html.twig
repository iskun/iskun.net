<div class="col-lg-12 animated fadeInRight" style="padding: 0px">
    <div class="mail-box-header">
        <div class="pull-right tooltip-demo">
          <a ng-click="readMail(reply)" onclick="return false;" title="Reply" data-placement="top" data-toggle="tooltip" class="btn btn-white btn-sm" href="mail_compose.html"><i class="fa fa-reply"></i> Quay lại </a>
        </div>
        <h2>
            Trả lời thư
        </h2>
    </div>
    <div class="mail-box">


        <div class="mail-body">

            <form class="form-horizontal" method="get">
                <div class="form-group"><label class="col-sm-2 control-label">Gửi đến:</label>

                    <div class="col-sm-10"><input disabled type="text" class="form-control" value="[[reply.from_address]]"></div>
                </div>
                <div class="form-group"><label class="col-sm-2 control-label">Tiêu đề:</label>

                    <div class="col-sm-10"><input disabled type="text" class="form-control" value="[Trả lời] - [[reply.subject]]"></div>
                </div>
            </form>

        </div>

        <div class="mail-text h-200">

            <div class="summernote" id="reply_content" >
                <br /><br /><br /><br /><br /><br /><br /><br /><br />
                <div id="replyto" style="font-size: 12px; border: 1px;">
                [[reply.from_address]] gửi đến [[reply.to_address]] vào [[(reply.delivery_time*1000) | date:'medium']]
                <br />
                --------------------------------------
                <div style="font-size: 12px;" ng-bind-html="reply.content">
                </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="mail-body text-right tooltip-demo">
            <a onclick="return false;" ng-click="sendReply();" href="mailbox.html" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Send"><i class="fa fa-reply"></i> Trả lời thư</a>
            <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Discard email"><i class="fa fa-times"></i> Discard</a>
            <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to draft folder"><i class="fa fa-pencil"></i> Draft</a>
        </div>
        <div class="clearfix"></div>



    </div>
</div>