{% extends 'TeacherBundle::layout/layout.html.twig' %}
{% block title %} Trang tài nguyên cá nhân {{user.fullname}}{% endblock %}

{% block navbar %}
    {{ render(controller('TeacherBundle:Default:navbar')) }} 
{% endblock %}
{% set mainController = 'resourcesController' %}
{% block content %}
    <div class="container-fluid">
    <div class="col-lg-3 container-fluid">
        {{ render(controller('TeacherBundle:Default:profile')) }} 
        {{ include('TeacherBundle::resources/side.html.twig', { 'user': user }) }}
    </div>
    <div class="col-lg-9 container-fluid" ng-cloak >
        {{ include('TeacherBundle::resources/files.html.twig', { 'user': user }) }}
    </div>
    </div>
{% endblock %}
{% block footer %}
    {{ render(controller('TeacherBundle:Default:footer')) }} 
{% endblock %}
{% block notification %}
    {{ include('TeacherBundle::notification.html.twig', { 'user': user }) }}
{% endblock %}

{% block javascript %}
    <script src="/js/teacher/profileController.js"></script>
    <script src="/js/teacher/{{mainController}}.js"></script>
    <script src="/js/teacher/addResourcesController.js"></script>
{% endblock %}